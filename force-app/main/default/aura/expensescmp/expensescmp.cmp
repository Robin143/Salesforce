<aura:component controller="ExpensesController">
    <aura:attribute name="newExpense" type="Expense__c"
         default="{ 'sobjectType': 'Expense__c',
                        'Name': '',
                        'Amount__c': 0,
                        'Client__c': '',
                        'Date__c': '',
                        'Reimbursed__c': false }"/>
    <aura:attribute name="expenses" type="Expense__c[]"/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <lightning:layout class="slds-page-header--object-home">
        <lightning:layoutItem >
            <lightning:icon iconName="standard:scan_card" alternativeText="expenses"></lightning:icon>
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">Expenses</h1>                
                <h2 class="slds-text-heading--medium">My Expenses</h2>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    <lightning:layout>
    	<lightning:layoutItem padding="around-small" size="12">
            <div class="slds-grid slds-gutters">
                <div aria-labelledby="newexpenseform" class="slds-col slds-size_4-of-12">
                    <fieldset class="slds-box slds-theme--default slds-container--small">
                        <legend id="newexpenseform" class="slds-text-heading--small slds-p-vertical--medium">
                            Add Expenses
                        </legend>
                        <form class="slds-form--stacked">
                            <lightning:input aura:id="expenseform" label="Expense Name"
                                             name="expensename"
                                             value="{!v.newExpense.Name}"
                                             required="true"/> 
                            <lightning:input type="number" aura:id="expensform" label="Amount"
                                             name="amount"
                                             min="0.1"
                                             formatter="currency"
                                             step="0.01"
                                             value="{!v.newExpense.Amount__c}"
                                             messageWhenRangeUnderFlow="Enter the amount that atleast under $0.10."/>
                            <lightning:input aura:id="expenseform" label="Client"
                                             name="expenseclient"
                                             value="{!v.newExpense.Client__c}"
                                             placeholder="Abc.co"/>
                            <lightning:input type="date" aura:id="expenseform" label="Expense Date"
                                             name="expensedate"
                                             value="{!v.newExpense.Date__c}"/>
                            <lightning:input type="checkbox" aura:id="expenseform" label="Reimbursed"
                                             name="expreimbursed"
                                             checked="{!v.newExpense.Reimbursed__c}"/>
                            <lightning:button label="Create Expense"
                                              class="slds-m-top--medium"
                                              variant="brand"
                                              onclick="{!c.clickCreate}"/>
                        </form>
                    </fieldset >
                </div>
                <div class="slds-col slds-size_8-of-12 slds-p-vertical--large">
                     <c:expenseList />
                </div>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
</aura:component>